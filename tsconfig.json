{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": ["./typings"],
    "types": ["mocha"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "typings/**/*",
    "test/**/*"
  ],
  "exclude": [
    "test"
  ],
  "ts-node": {
    "files": true
  },
}
